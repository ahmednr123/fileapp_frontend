{{#unless isLoaded}}
    <div class="lds-ring"><div></div><div></div><div></div><div></div></div>
{{else}}
    <div class="vertical init-form">
        <section class="vertical">
            <label>Path</label>
            {{input type="text" value=path}}
        </section>
        <section class="vertical">
            <label>Key</label>
            {{input type="password" value=key}}
        </section>
        <section class="vertical">
            <!--<input type="button" value="Encrypt" id="encrypt">-->
            <button {{action "encrypt"}}>Encrypt</button>
        </section>
    </div>
{{/unless}}